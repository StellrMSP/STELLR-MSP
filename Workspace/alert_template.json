{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "scheduledqueryrules_Metrics_name": {
            "defaultValue": "Metrics",
            "type": "String"
        },
        "scheduledqueryrules_Error_Events_name": {
            "defaultValue": "Error",
            "type": "String"
        },
         "scheduledqueryrules_Event_log_warning_name": {
            "defaultValue": "Warning",
            "type": "String"
        },
        "metricAlerts_Metrics_description": {
            "type": "String"
        },
        "metricAlerts_name": {
            "defaultValue": "Counters",
            "type": "String"
        },
        "workspaces_externalid": {
            "defaultValue": "/subscriptions/subscription()/resourceGroups/resourceGroup().name/providers/Microsoft.OperationalInsights/workspaces/",
            "type": "String"
        },
        "actiongroups_externalid": {
            "defaultValue": "/subscriptions/subscription()/resourceGroups/resourceGroup().name/providers/microsoft.insights/actiongroups/",
            "type": "String"
        },        
        "actionGroups_name": {
            "defaultValue": "Email",
            "type": "String"
        },
        "workspaceName": {
            "defaultValue": "wvd-LA",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/actionGroups",
            "apiVersion": "2019-03-01",
            "name": "[parameters('actionGroups_name')]",
            "location": "Global",
            "tags": {
                "wvd": "Infrastructure"
            },
            "properties": {
                "groupShortName": "[parameters('actionGroups_name')]",
                "enabled": true,
                "emailReceivers": [
                    {
                        "name": "teamEmail_-EmailAction-",
                        "emailAddress": "STELLR.MSPServices@synnex.com",
                        "useCommonAlertSchema": false
                    }
                ],
                "smsReceivers": [],
                "webhookReceivers": [],
                "itsmReceivers": [],
                "azureAppPushReceivers": [],
                "automationRunbookReceivers": [],
                "voiceReceivers": [],
                "logicAppReceivers": [],
                "azureFunctionReceivers": []
            }
        },
        {
            "type": "microsoft.insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[parameters('metricAlerts_name')]",
            "location": "global",
            "properties": {
                "severity": 3,
                "enabled": true,
                "scopes": [
                    "[concat(parameters('workspaces_externalid'), parameters('workspaceName'))]"
                ],
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "threshold": 100000000,
                            "name": "Metric1",
                            "metricNamespace": "Microsoft.OperationalInsights/workspaces",
                            "metricName": "Average_% Free Space",
                            "operator": "LessThanOrEqual",
                            "timeAggregation": "Total",
                            "criterionType": "StaticThresholdCriterion"
                        },
                        {
                            "threshold": 2,
                            "name": "Metric2",
                            "metricNamespace": "Microsoft.OperationalInsights/workspaces",
                            "metricName": "Average_Current Disk Queue Length",
                            "operator": "GreaterThan",
                            "timeAggregation": "Average",
                            "criterionType": "StaticThresholdCriterion"
                        },
                        {
                            "threshold": 512000000,
                            "name": "Metric3",
                            "metricNamespace": "Microsoft.OperationalInsights/workspaces",
                            "metricName": "Average_Available MBytes Memory",
                            "operator": "LessThanOrEqual",
                            "timeAggregation": "Maximum",
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.OperationalInsights/workspaces",
                "actions": [
                    {
                        "actionGroupId": "[concat(parameters('actionGroups_externalid'), parameters('actionGroups_name'))]",
                        "webHookProperties": {}
                    }
                ],
                "description": "[parameters('metricAlerts_Metrics_description')]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "workspace",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/StellrMSP/STELLR-MSP/main/Workspace/workspaceconfig.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName":{
                        "value": "[parameters('workspaceName')]"
                    }
                }
            }
        },
     {
         "name": "nestedDeployment1",
         "type": "Microsoft.Resources/deployments",
         "apiVersion": "2019-10-01",
         "properties": {
             "expressionEvaluationOptions": {
                 "scope": "inner"
             },
             "mode": "Incremental",
             "template": {
                 "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                 "contentVersion": "1.0.0.0",
                 "parameters": { "scheduledqueryrules_Metrics_name": {
            "defaultValue": "",
            "type": "String"
        },
        "scheduledqueryrules_Error_Events_name": {
            "defaultValue": "",
            "type": "String"
        },
         "scheduledqueryrules_Evnet_log_warning_name": {
            "defaultValue": "",
            "type": "String"
        },
        "workspaces_externalid": {
            "defaultValue": "/subscriptions/subscription()/resourceGroups/resourceGroup().name/providers/Microsoft.OperationalInsights/workspaces/",
            "type": "String"            
        },
        "workspaceName": {
            "type": "string",
            "defaultValue":""
        },
        "actiongroups_externalid": {
            "defaultValue": "/subscriptions/Subscription()/resourceGroups/resourceGroup().name/providers/microsoft.insights/actiongroups/",
            "type": "String"
        },
        "actionGroups_name": {
            "defaultValue": "",
            "type": "String"
        }
            },
                 "variables": {},
                 "resources": [{
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2018-04-16",
            "name": "[parameters('scheduledqueryrules_Metrics_name')]",
            "location": "eastus",            
            "tags": {
                "hidden-link:/subscriptions/subscription()/resourceGroups/resourceGroup().name//providers/Microsoft.OperationalInsights/workspaces/[parameters('workspaceName')]": "Resource"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'Alert')]"
            ],
            "properties": {
                "enabled": "true",
                "source": {
                    "queryType": "ResultCount",
                    "dataSourceId": "[concat(parameters('workspaces_externalid'), parameters('workspaceName'))]"                     
                },
                "action": {
                    "criteria": [
                        {
                            "metricName": "Average_% Free Space",
                            "dimensions": []
                        },
                        {
                            "metricName": "Average_Current Disk Queue Length",
                            "dimensions": []
                        },
                        {
                            "metricName": "Average_Available MBytes Memory",
                            "dimensions": []
                        }
                    ],
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.LogToMetricAction"
                }
            }
        },
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2018-04-16",
            "name": "[parameters('scheduledqueryrules_Error_Events_name')]",
            "location": "eastus",
            "properties": {
                "enabled": "true",
                "source": {
                    "query": "union Event, Syslog // Event table stores Windows event records, Syslog stores Linux records\n| where TimeGenerated > ago(1h)\n| where EventLevelName == \"Error\" // EventLevelName is used in the Event (Windows) records\nor SeverityLevel== \"err\" // SeverityLevel is used in Syslog (Linux) records",
                    "authorizedResources": [],
                    "dataSourceId": "[parameters('workspaces_externalid')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 5
                },
                "action": {
                    "severity": "3",
                    "aznsAction": {
                        "actionGroup": [
                            "[concat(parameters('actiongroups_externalid'),parameters('actionGroups_name'))]"
                        ]
                    },
                    "throttlingInMin": 20,
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 1
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        },
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2018-04-16",
            "name": "[parameters('scheduledqueryrules_Evnet_log_warning_name')]",
            "location": "eastus",
            "properties": {
                "enabled": "true",
                "source": {
                    "query": "Event | where EventLevelName == \"warning\" | sort by TimeGenerated desc\r\n// Oql: Type=Event EventLevelName=warning // Args: {OQ: True; WorkspaceId: 00000000-0000-0000-0000-000000000000} // Settings: {PTT: True; SortI: True; SortF: True} // Version: 0.1.122",
                    "authorizedResources": [],
                    "dataSourceId": "[parameters('workspaces_externalid')]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 5
                },
                "action": {
                    "severity": "3",
                    "aznsAction": {
                        "actionGroup": [
                           "[concat(parameters('actiongroups_externalid'),parameters('actionGroups_name'))]"
                        ]
                    },
                    "throttlingInMin": 20,
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 1
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
               
        },
        {
            "name": "Alert",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/StellrMSP/STELLR-MSP/main/Workspace/alert_template.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {}
            }
        }],
                 "outputs": {}
             }
         }
     }
        
    ]
}