{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",

    "parameters": {
        "scheduledqueryrules_name": {
            "defaultValue": "",
            "type": "String",
            "metadata": {
                "description": "Name of query rule"
            }
        },
        "scheduledqueryrules_Error_Events_name": {
            "defaultValue": "",
            "type": "String",
            "metadata": {
                "description": "Name of query rule"
            }
        },
         "scheduledqueryrules_WArning_Events_name": {
            "defaultValue": "",
            "type": "String",
            "metadata": {
                "description": "Name of query rule"
            } 
            
    },
    "alertName": {
        "defaultValue": "",
        "type": "string",
        "metadata": {
            "description": "Name of counter ALert"
        }
    },
    "alertDescription": {
        "defaultValue": "",
        "type": "string",
        "metadata": {
            "description": "Information about the counters"
        }
    },
     "workspaces_externalid": {
            "defaultValue": "/subscriptions/subscription()/resourceGroups/resourceGroup().name/providers/Microsoft.OperationalInsights/workspaces/",
            "type": "String"
        },
        "actiongroups_externalid": {
            "defaultValue": "/subscriptions/subscription()/resourceGroups/resourceGroup().name/providers/microsoft.insights/actiongroups/",
            "type": "String"
        },        
        "actionGroups_name": {
            "defaultValue": "Email",
            "type": "String",
            "metadata": {
                "description": "Name of the Action Group used to notify of alerts"
            }
        },
        "workspaceName": {
            "defaultValue": "wvd-LA",
            "type": "string",
            "metadata": {
                "description": "Name of teh Log Analytics Workspace"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/actionGroups",
            "apiVersion": "2019-03-01",
            "name": "[parameters('actionGroups_name')]",
            "location": "Global",
            "tags": {
                "wvd": "Infrastructure"
            },
            "properties": {
                "groupShortName": "[parameters('actionGroups_name')]",
                "enabled": true,
                "emailReceivers": [
                    {
                        "name": "teamEmail_-EmailAction-",
                        "emailAddress": "STELLR.MSPServices@synnex.com",
                        "useCommonAlertSchema": false
                    }
                ],
                "smsReceivers": [],
                "webhookReceivers": [],
                "itsmReceivers": [],
                "azureAppPushReceivers": [],
                "automationRunbookReceivers": [],
                "voiceReceivers": [],
                "logicAppReceivers": [],
                "azureFunctionReceivers": []
            }
        },
        {
            "type": "Microsoft.Insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[parameters('alertName')]",
            "location": "global",
            "properties": {
                "severity": 3,
                "enabled": true,
                "scopes": [
                    "[concat(parameters('workspaces_externalid'), parameters('workspaceName'))]"
                ],
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {                    
                    "allOf": [
                        {
                            "threshold": 100000000,
                            "name": "1",
                            "metricNamespace": "Microsoft.OperationalInsights/workspaces",
                            "metricName": "Average_% Free Space",
                            "operator": "LessThanOrEqual",
                            "timeAggregation": "Total",
                            "criterionType": "StaticThresholdCriterion"
                        },
                        {
                            "threshold": 2,
                            "name": "2",
                            "metricNamespace": "Microsoft.OperationalInsights/workspaces",
                            "metricName": "Average_Current Disk Queue Length",
                            "operator": "GreaterThan",
                            "timeAggregation": "Average",
                            "criterionType": "StaticThresholdCriterion"
                        },
                        {
                            "threshold": 512000000,
                            "name": "3",
                            "metricNamespace": "Microsoft.OperationalInsights/workspaces",
                            "metricName": "Average_Available MBytes Memory",
                            "operator": "LessThanOrEqual",
                            "timeAggregation": "Maximum",
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                    "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.OperationalInsights/workspaces",
                "actions": [
                    {
                        "actionGroupId": "[concat(parameters('actionGroups_externalid'), parameters('actionGroups_name'))]",
                        "webHookProperties": {}
                    }
                ],
                "description": "[parameters('alertDescription')]"
            }
        },
        {
            "name": "workspace",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/StellrMSP/STELLR-MSP/main/Workspace/workspaceconfig.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName":{
                        "value": "[parameters('workspaceName')]"
                    }
                }
            }
        },
       {
           "name": "linkedDeployment1",
           "type": "Microsoft.Resources/deployments",
           "apiVersion": "2019-10-01",
           "properties": {
               "mode": "Incremental",
               "templateLink": {
                   "uri": "https://raw.githubusercontent.com/StellrMSP/STELLR-MSP/main/Workspace/rule_template.json",
                   "contentVersion": "1.0.0.0"
               },
               "parameters": {
                   "scheduledqueryrules_name":{
                        "value":"[parameters('scheduledqueryrules_name')]"
                    },
                    "scheduledqueryrules_Error_Events_name":{
                        "value":"[parameters('scheduledqueryrules_Error_Events_name')]"
                    },
                    "scheduledqueryrules_Evnet_log_warning_name":{
                        "value":"[parameters('scheduledqueryrules_Warning_Events_name')]"
               }
           }
       }
    }
    ]
}