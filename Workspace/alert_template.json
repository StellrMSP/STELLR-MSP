{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",

    "parameters": {
        "scheduledqueryrules_Faults_name": {
            "defaultValue": "PageFaults",
            "type": "String"
        },
        "scheduledqueryrules_name": {
            "defaultValue": "PerformanceAlert",
            "type": "String",
            "metadata": {
                "description": "Name of query rule"
            }
        },
        "scheduledqueryrules_Error_Events_name": {
            "defaultValue": "ErrorAlert",
            "type": "String",
            "metadata": {
                "description": "Name of query rule"
            }
        },
         "scheduledqueryrules_Warning_Events_name": {
            "defaultValue": "WarningAlert",
            "type": "String",
            "metadata": {
                "description": "Name of query rule"
            } 
            
    },
    "alertName": {
        "defaultValue": "Performance",
        "type": "string",
        "metadata": {
            "description": "Name of counter ALert"
        }
    },
    "alertDescription": {
        "defaultValue": "Performance Threshold Alert",
        "type": "string",
        "metadata": {
            "description": "Information about the counters"
            }
        },
        "actionGroups_name": {
            "defaultValue": "CreateTicket",
            "type": "String",
            "metadata": {
                "description": "Name of the Action Group used to notify of alerts"
            }
        },
        "workspaceName": {
            "defaultValue": "WVD-MSP-Workspace",
            "type": "string",
            "metadata": {
                "description": "Name of the Log Analytics Workspace"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/actionGroups",
            "apiVersion": "2019-03-01",
            "name": "[parameters('actionGroups_name')]",
            "location": "Global",
            "tags": {
                "wvd": "Infrastructure"
            },
            "properties": {
                "groupShortName": "[parameters('actionGroups_name')]",
                "enabled": true,
                "emailReceivers": [
                    {
                        "name": "teamEmail_-EmailAction-",
                        "emailAddress": "STELLR.MSPServices@synnex.com",
                        "useCommonAlertSchema": false
                    }
                ],
                "smsReceivers": [],
                "webhookReceivers": [],
                "itsmReceivers": [],
                "azureAppPushReceivers": [],
                "automationRunbookReceivers": [],
                "voiceReceivers": [],
                "logicAppReceivers": [],
                "azureFunctionReceivers": []
            }
        },
        {
            "type": "Microsoft.Insights/metricAlerts",
            "apiVersion": "2018-03-01",
            "name": "[parameters('alertName')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'workspace')]"
            ],
            "properties": {
                "severity": 3,
                "enabled": true,
                 "scopes": [
                     "[resourceId('Microsoft.OperationalInsights/workspaces',parameters('workspaceName'))]"
                 ], 
                "evaluationFrequency": "PT1M",
                "windowSize": "PT5M",
                "criteria": {                    
                    "allOf": [
                        {
                            "threshold": 100000000,
                            "name": "1",
                            "metricNamespace": "Microsoft.OperationalInsights/workspaces",
                            "metricName": "Average_% Free Space",
                            "operator": "LessThanOrEqual",
                            "timeAggregation": "Total",
                            "criterionType": "StaticThresholdCriterion"
                        },
                        {
                            "threshold": 2,
                            "name": "2",
                            "metricNamespace": "Microsoft.OperationalInsights/workspaces",
                            "metricName": "Average_Current Disk Queue Length",
                            "operator": "GreaterThan",
                            "timeAggregation": "Average",
                            "criterionType": "StaticThresholdCriterion"
                        },
                        {
                            "threshold": 512000000,
                            "name": "3",
                            "metricNamespace": "Microsoft.OperationalInsights/workspaces",
                            "metricName": "Average_Available MBytes Memory",
                            "operator": "LessThanOrEqual",
                            "timeAggregation": "Maximum",
                            "criterionType": "StaticThresholdCriterion"
                        }
                    ],
                "odata.type": "Microsoft.Azure.Monitor.SingleResourceMultipleMetricCriteria"
                },
                "autoMitigate": true,
                "targetResourceType": "Microsoft.OperationalInsights/workspaces",
                "actions": [
                    {
                        "actionGroupId": "[resourceId('Microsoft.Insights/actionGroups',parameters('actionGroups_name'))]",
                        "webHookProperties": {}
                    }
                ],
                "description": "[parameters('alertDescription')]"
            }
        },
        {
            "name": "workspace",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/StellrMSP/STELLR-MSP/main/Workspace/workspaceconfig.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "workspaceName":{
                        "value": "[parameters('workspaceName')]"
                    }
                }
            }
        },
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2018-04-16",
            "name": "[parameters('scheduledqueryrules_name')]",
            "location": "eastus",            
            "tags": {
                "hidden-link:/subscriptions/subscription()/resourceGroups/resourceGroup().name//providers/Microsoft.OperationalInsights/workspaces/[parameters('workspaceName')]": "Resource"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Insights/metricAlerts',parameters('alertName'))]"
            ],
            "properties": {
                "enabled": "true",
                "source": {
                    "queryType": "ResultCount",
                    "dataSourceId": "[resourceId('Microsoft.OperationalInsights/workspaces',parameters('workspaceName'))]"                    
                },
                "action": {
                    "criteria": [
                        {
                            "metricName": "Average_% Free Space",
                            "dimensions": []
                        },
                        {
                            "metricName": "Average_Current Disk Queue Length",
                            "dimensions": []
                        },
                        {
                            "metricName": "Average_Available MBytes Memory",
                            "dimensions": []
                        }
                    ],
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.LogToMetricAction"
                }
            }
        },
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2018-04-16",
            "name": "[parameters('scheduledqueryrules_Error_Events_name')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'workspace')]"
            ],
            "properties": {
                "enabled": "true",
                "source": {
                    "query": "union Event, Syslog // Event table stores Windows event records, Syslog stores Linux records\n| where TimeGenerated > ago(1h)\n| where EventLevelName == \"Error\" // EventLevelName is used in the Event (Windows) records\nor SeverityLevel== \"err\" // SeverityLevel is used in Syslog (Linux) records",
                    "authorizedResources": [],
                    "dataSourceId": "[resourceId('Microsoft.OperationalInsights/workspaces',parameters('workspaceName'))]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 5
                },
                "action": {
                    "severity": "3",
                    "aznsAction": {
                        "actionGroup": [
                            "[resourceId('Microsoft.Insights/actionGroups',parameters('actionGroups_name'))]"
                        ],
                        "emailSubject": "[concat('Event Log Errors',parameters('scheduledqueryrules_Error_Events_name'))]"
                    },
                    "throttlingInMin": 20,
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 1
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        },
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2018-04-16",
            "name": "[parameters('scheduledqueryrules_Warning_Events_name')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'workspace')]"
            ],
            "properties": {
                "enabled": "true",
                "source": {
                    "query": "Event | where EventLevelName == \"warning\" | sort by TimeGenerated desc\r\n// Oql: Type=Event EventLevelName=warning // Args: {OQ: True; WorkspaceId: 00000000-0000-0000-0000-000000000000} // Settings: {PTT: True; SortI: True; SortF: True} // Version: 0.1.122",
                    "authorizedResources": [],
                    "dataSourceId": "[resourceId('Microsoft.OperationalInsights/workspaces',parameters('workspaceName'))]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 5
                },
                "action": {
                    "severity": "3",
                    "aznsAction": {
                        "actionGroup": [
                            "[resourceId('Microsoft.Insights/actionGroups',parameters('actionGroups_name'))]"                            
                        ],
                        "emailSubject": "[concat('Event Log Warnings',parameters('scheduledqueryrules_Warning_Events_name'))]"
                    },
                    "throttlingInMin": 20,
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 1
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
               
        },
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2018-04-16",
            "name": "[parameters('scheduledqueryrules_Faults_name')]",
            "location": "eastus",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'workspace')]"
            ],
            "properties": {
                "enabled": "true",
                "source": {
                    "query": "Perf\n| where ObjectName == \"memory\" and CounterName contains \"Page Faluts\" or CounterName contains \"Pages\" | where CounterValue >= abs(1500)\n\n",
                    "authorizedResources": [],
                    "dataSourceId": "[resourceId('Microsoft.OperationalInsights/workspaces',parameters('workspaceName'))]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 1440
                },
                "action": {
                    "severity": "3",
                    "aznsAction": {
                        "actionGroup": [
                            "[resourceId('Microsoft.Insights/actionGroups',parameters('actionGroups_name'))]"
                        ],
                        "emailSubject": "[concat('Increased Page Faults', parameters('scheduledqueryrules_Faults_name'))]"
                    },
                    "trigger": {
                        "thresholdOperator": "GreaterThan",
                        "threshold": 2
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        }
    ]
}